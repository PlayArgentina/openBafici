# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                    controllers.Films.home
GET     /films               controllers.Films.list(page: Long, sort: String, filter: String)
GET     /film/:id            controllers.Films.show(id: String)

GET     /elastic/films       controllers.FilmsElastic.list(page: Long, sort: String, filter: String)
GET     /elastic/film/:id    controllers.FilmsElastic.show(id: String)

GET     /test                controllers.FilmsElastic.test

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)