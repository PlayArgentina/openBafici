# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                   controllers.FilmsElastic.home
GET     /films              controllers.FilmsElastic.list(page: Long ?= 1, sort: String ?= "", filter: String ?= "")
GET     /film/:id           controllers.FilmsElastic.show(id: String)

GET     /restba             controllers.FilmsRestBA.home
GET     /restba/films       controllers.FilmsRestBA.list(page: Long ?= 1, sort: String ?= "", filter: String ?= "")
GET     /restba/film/:id    controllers.FilmsRestBA.show(id: String)

GET     /test               controllers.FilmsElastic.test

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file       controllers.Assets.at(path="/public", file)